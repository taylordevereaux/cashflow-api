{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@services/*": ["app/_services/*"],
      "@endpoints/*": ["app/_endpoints/*"],
      "@models/*": ["app/_models/*"],
      "@pipes/*": ["app/_pipes/*"],
      "@directives/*": ["app/_directives/*"],
      "@components/*": ["app/_components/*"],
      "@shared/*": ["app/shared/*"],
      "@environments/*": ["environments/*"],
      "@app/*": ["app/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
