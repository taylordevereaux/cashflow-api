{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@services/*": ["app/_services/*"],
      "@endpoints/*": ["app/_endpoints/*"],
      "@models/*": ["app/_models/*"],
      "@pipes/*": ["app/_pipes/*"],
      "@directives/*": ["app/_directives/*"],
      "@components/*": ["app/_components/*"],
      "@shared/*": ["app/shared/*"],
      "@environments/*": ["environments/*"],
      "@app/*": ["app/*"]
    }
  }
}
